{
  "name": "dashboard",
  "version": "1.0.0",
  "description": "dashboard app",
  "main": "app.js",
  "scripts": {
    "sass:w": "sass client/styles/scss/base.scss client/styles/css/styles.css --watch --load-path=node_modules/bootstrap/scss/",
    "sass:comp": "sass client/styles/scss/base.scss client/styles/css/styles.css --load-path=node_modules/bootstrap/scss/",
    "server:dev": "pm2-dev app.js",
    "minify:css": "css-minify --file client/styles/css/styles.css -o client/styles/dist",
    "purge:css": "purgecss -v -font -keyframes --css client/styles/css/styles.css --content client/index.html client/js/*.js --output client/styles/css/",
    "autoprefix": "npx postcss client/styles/css/styles.css  --use autoprefixer -d client/styles/css/",
    "pre:deploy": "run-s sass:comp purge:css autoprefix minify:css",
    "server": "export NODE_ENV=production &&  pm2 start app.js",
    "sync:aws": "rsync -rvP -e ssh --exclude=node_modules --exclude=.git ./ ubuntu@3.67.197.225:/home/ubuntu/dashboard"
  },
  "author": "Miha Go",
  "homepage": "https://github.com/MihailGorbenko/dashboard.git",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.2",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.5",
    "nodemailer": "^6.8.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "css-minify": "^2.0.0",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "purgecss": "^5.0.0",
    "sass": "^1.56.1"
  }
}
